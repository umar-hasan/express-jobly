{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://our.company.com/jobUpdate.schema.json",
    "type": "object",
    "required": [
        "title",
        "salary",
        "equity",
        "companyHandle"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "maximum": 1.0,
            "type": "number"
        },
        "companyHandle": {
            "type": "string"
        }
    }
}